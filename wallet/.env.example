# Wallet Environment Configuration
# Copy to .env: cp .env.example .env

# =============================================================================
# Wallet Settings
# =============================================================================

# Node address to connect to
WALLET_NODE_ADDRESS=127.0.0.1:9000

# Wallet configuration file
WALLET_CONFIG_FILE=wallet_config.toml

# =============================================================================
# Update Intervals
# =============================================================================

# UTXO fetch interval (seconds)
UTXO_UPDATE_INTERVAL=20

# Balance display update interval (milliseconds)
BALANCE_UPDATE_INTERVAL_MS=500

# =============================================================================
# Logging
# =============================================================================

RUST_LOG=info
RUST_BACKTRACE=1

# Log file location (relative to where wallet is run)
# LOG_DIR=./logs
