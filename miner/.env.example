# Miner Environment Configuration
# Copy to .env: cp .env.example .env

# =============================================================================
# Miner Settings
# =============================================================================

# Node address to connect to
MINER_NODE_ADDRESS=127.0.0.1:9000

# Public key file for receiving rewards
MINER_PUBLIC_KEY=miner.pub.pem

# =============================================================================
# Mining Parameters
# =============================================================================

# Number of nonces to try before checking for events
# Higher = more efficient, Lower = more responsive
MINING_BATCH_SIZE=2000000

# Template fetch/validation interval (seconds)
TEMPLATE_FETCH_INTERVAL=5

# =============================================================================
# Logging
# =============================================================================

RUST_LOG=info
RUST_BACKTRACE=1
