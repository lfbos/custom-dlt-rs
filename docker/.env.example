# Docker Compose Environment Configuration
# Copy to .env: cp .env.example .env
#
# These variables configure the Docker deployment

# =============================================================================
# Network Selection
# =============================================================================

# Choose network: mainnet, testnet, or devnet
NETWORK_ID=mainnet

# =============================================================================
# Port Mappings (host machine ports)
# =============================================================================

NODE1_PORT=9000
NODE2_PORT=9001
NODE3_PORT=9002

# =============================================================================
# Network Parameters
# =============================================================================

# Block time (seconds)
IDEAL_BLOCK_TIME=10

# Difficulty adjustment
DIFFICULTY_UPDATE_INTERVAL=50

# Mempool settings
MAX_MEMPOOL_TX_AGE=600
BLOCK_TX_CAP=20

# =============================================================================
# Mining Parameters
# =============================================================================

MINING_BATCH_SIZE=2000000
TEMPLATE_FETCH_INTERVAL=5

# =============================================================================
# Logging
# =============================================================================

# Options: error, warn, info, debug, trace
RUST_LOG=info
RUST_BACKTRACE=1
