# Development Network Configuration
# Very fast blocks, very easy difficulty for rapid testing

NETWORK_ID=devnet

# Very fast blocks
IDEAL_BLOCK_TIME=2

# Very easy difficulty (mines almost instantly)
MIN_TARGET_HEX=0xFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFF

# Quick halving
HALVING_INTERVAL=50

# Frequent difficulty adjustment
DIFFICULTY_UPDATE_INTERVAL=10

# Tiny blocks
BLOCK_TX_CAP=5

# Short mempool age
MAX_MEMPOOL_TX_AGE=120

# Node settings
NODE_PORT=29000
BLOCKCHAIN_FILE=./blockchain_devnet.cbor

# Mining - very small batches for instant feedback
MINING_BATCH_SIZE=10000
TEMPLATE_FETCH_INTERVAL=2

# Wallet - fast updates
UTXO_UPDATE_INTERVAL=5
BALANCE_UPDATE_INTERVAL_MS=250

# Verbose logging
RUST_LOG=trace
RUST_BACKTRACE=full
